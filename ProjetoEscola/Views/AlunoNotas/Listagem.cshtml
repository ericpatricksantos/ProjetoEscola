@model ProjetoEscola.Models.View.AlunoNotasView
@{
    ViewData["Title"] = "Relatório Alunos Por Notas";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1 class="text-center">@ViewData["Title"]</h1>

    @using (Html.BeginForm("Buscar", "AlunoNotas", FormMethod.Post))
    {
        <div class="form-group">
            <label asp-for="disciplina_id" class="control-label"></label>
            @Html.DropDownList("disciplina_id", new SelectList(ViewBag.listaDisciplinas, "id", "nome"), "Selecione", new { @class = "form-control" })
            <i class="form-group-bar"></i>
            <span asp-validation-for="disciplina_id" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ano" class="control-label"></label>
            <input id="ano" name="ano" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="semestre" class="control-label"></label>
            <input id="semestre" name="semestre" class="form-control" />
        </div>

        <div class="form-group">
            <input id="buscar" name="buscar" type="submit" value="Buscar" class="btn btn-primary" />
        </div>

    }

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Nome da Disciplinaa</td>
                <td>Ano</td>
                <td>Semestre</td>
                <td>Nota</td>
                <td>Status</td>
            </tr>
        </thead>
        @{

            foreach (var item in ViewBag.lista)
            {
                <tr>
                    <td>@item.nome</td>
                    <td>@item.nomeDisciplina</td>
                    <td>@item.ano</td>
                    <td>@item.semestre</td>
                    <td>@item.nota</td>
                    <td>@(item.status ==  true ? "Aprovado" : "Reprovado")</td>
                </tr>
            }
        }
    </table>

</body>
</html>